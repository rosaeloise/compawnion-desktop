{
	"name": "compawnion-desktop",
	"productName": "compawnion-desktop",
	"version": "1.0.0",
	"description": "A desktop application for managing shelter adoption process",
	"main": ".webpack/main",
	"scripts": {
		"start": "electron-forge start",
		"package": "electron-forge package",
		"make": "electron-forge make",
		"publish": "electron-forge publish",
		"lint": "echo \"No linting configured\""
	},
	"build": {
		"appId": "com.barkcode.compawnion",
		"mac": {
			"category": "public.shelter.utilities",
			"target": "dmg"
		},
		"extraResources": [
			"res",
			"favicon.png"
		],
		"directories": {
			"buildResources": "build",
			"output": "output"
		},
		"files": [
			"build/*"
		]
	},
	"devDependencies": {
		"@babel/core": "^7.25.2",
		"@babel/preset-react": "^7.24.7",
		"@electron-forge/cli": "^7.5.0",
		"@electron-forge/maker-deb": "^7.5.0",
		"@electron-forge/maker-rpm": "^7.5.0",
		"@electron-forge/maker-squirrel": "^7.5.0",
		"@electron-forge/maker-zip": "^7.5.0",
		"@electron-forge/plugin-auto-unpack-natives": "^7.5.0",
		"@electron-forge/plugin-fuses": "^7.5.0",
		"@electron-forge/plugin-webpack": "^7.5.0",
		"@electron/fuses": "^1.8.0",
		"@vercel/webpack-asset-relocator-loader": "1.7.3",
		"babel-loader": "^9.2.1",
		"copy-webpack-plugin": "^12.0.2",
		"css-loader": "^6.0.0",
		"electron": "32.1.2",
		"electron-is-dev": "^3.0.1",
		"node-loader": "^2.0.0",
		"style-loader": "^3.0.0"
	},
	"keywords": [],
	"author": {
		"name": "Daniel John Baynosa",
		"email": "firedantsm@gmail.com"
	},
	"license": "MIT",
	"dependencies": {
		"electron-squirrel-startup": "^1.0.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-router-dom": "^6.26.2",
		"sweetalert2": "^11.15.6",
		"sweetalert2-react-content": "^5.1.0"
	}
}
